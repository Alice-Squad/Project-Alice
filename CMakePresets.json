{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 15,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},
		{
			"name": "windows-base",
			"inherits": "base",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "not-windows-base",
			"inherits": "base",
			"hidden": true,
			"condition": {
				"type": "notEquals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "x64-debug-windows",
			"displayName": "x64 Debug",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-debug",
			"displayName": "x64 Debug",
			"inherits": "not-windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-release-windows",
			"displayName": "x64 Release",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "x64-release",
			"displayName": "x64 Release",
			"inherits": "not-windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}